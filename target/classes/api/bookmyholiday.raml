#%RAML 1.0
title: BookMyHoliday
/flights:
  get:
    queryParameters:
      source:
        type: string
        required: true
      destination:
        type: string
        required: true
    responses:
      200:
        body:
          application/json:
            example:
              {"message":"Hello user"}
  post:
    body:
      application/json:
            properties:
              flightId:
                required: true
              NoOfpassenger:
                required: true
              classType:
                required: true
                type: string
                enum:
                  - ECONOMY
                  - BUSINESS
              Origin:
                required: true
              Destination:
                required: true
              TravelDate:
                required: true
    responses:
      200:
        body:
          application/json:
            example:
              {"message":"successful"}
  delete:
    queryParameters:
      id:
        type: string
        required: true
    responses:
      200:
        body:
          application/json:
            example: "deletedsuccessful"
            
          

/Hotel:
  get:
    queryParameters:
      location:
        type: string
        required: true
      checkin_date:
        type: string
        required: true
      checkout_date:
          type: string
          required: true
    responses:
      200:
        body:
          application/json:
            example:
              {"message":"successful"}
  post:
    body:
      application/json:
            properties:
              name:
                type: string
                required: true

              checkin_date:
                  type: string
                  required: true
              checkout_date:
                  type: string
                  required: true
            
    responses:
      200:
        body:
          application/json:
            example:
              {"message":"successful"}
